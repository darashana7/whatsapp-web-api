# Server Configuration
PORT=3000

# API Security (optional - leave empty to disable)
API_KEY=

# Phone Number Configuration
DEFAULT_COUNTRY_CODE=91

# Auto-Reply Configuration
AUTO_REPLY_ENABLED=true
AUTO_REPLY_COOLDOWN=60

# ===========================================
# AI Configuration (choose one provider)
# ===========================================

# Option 1: OpenRouter (recommended - supports many free models)
# Get your free API key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=
# Free models: google/gemini-2.0-flash-exp:free, meta-llama/llama-3.2-3b-instruct:free
OPENROUTER_MODEL=google/gemini-2.0-flash-exp:free

# Option 2: Google Gemini API
# Get your free API key at: https://aistudio.google.com/apikey
GOOGLE_API_KEY=
GOOGLE_MODEL=gemini-2.0-flash

# ===========================================

# MongoDB URI for session persistence on Railway (optional)
# If not set, uses local file storage
MONGODB_URI=

# Puppeteer Configuration (for Railway/Docker)
PUPPETEER_EXECUTABLE_PATH=
